<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-4xl font-extrabold tracking-tighter text-white font-mono uppercase">Project Matrix</h2>
            <p class="text-slate-400 text-sm mt-2">Manage your portfolio projects</p>
        </div>
        <button id="newProjectBtn" class="flex items-center gap-3 bg-primary text-black px-5 py-3 rounded-xl text-xs font-mono font-bold uppercase tracking-widest hover:bg-primary/90 transition-all shadow-[0_0_20px_rgba(57,255,20,0.3)]">
            <span class="material-symbols-outlined text-lg">add</span>
            New Project
        </button>
    </div>

    <div id="projectsList" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="glass-panel rounded-2xl p-6 border-white/5 hover:border-primary/20 transition-all">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-white">Quantum Dashboard</h3>
                <span class="px-3 py-1 bg-primary/20 text-primary text-xs font-mono rounded-full">LIVE</span>
            </div>
            <p class="text-slate-400 text-sm mb-4">Enterprise financial trading platform</p>
            <div class="flex gap-2">
                <span class="text-xs glass-panel px-3 py-1 rounded">React</span>
                <span class="text-xs glass-panel px-3 py-1 rounded">Node.js</span>
            </div>
        </div>

        <div class="glass-panel rounded-2xl p-6 border-white/5 hover:border-primary/20 transition-all">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-white">EcoSync IoT</h3>
                <span class="px-3 py-1 bg-white/10 text-white text-xs font-mono rounded-full">DEV</span>
            </div>
            <p class="text-slate-400 text-sm mb-4">Smart home energy management system</p>
            <div class="flex gap-2">
                <span class="text-xs glass-panel px-3 py-1 rounded">Python</span>
                <span class="text-xs glass-panel px-3 py-1 rounded">MQTT</span>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="projectModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="glass-panel rounded-2xl p-8 max-w-2xl w-full">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-primary font-mono">NEW PROJECT</h3>
            <button id="closeModal" class="text-slate-400 hover:text-white">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <form id="projectForm" class="space-y-4">
            <input type="text" name="name" required placeholder="Project Name" class="w-full glass-panel bg-white/5 border-white/10 rounded-xl px-4 py-3 text-white neon-border-focus" />
            <textarea name="description" required placeholder="Description" rows="3" class="w-full glass-panel bg-white/5 border-white/10 rounded-xl px-4 py-3 text-white neon-border-focus"></textarea>
            <div class="grid grid-cols-2 gap-4">
                <select name="status" class="w-full glass-panel bg-white/5 border-white/10 rounded-xl px-4 py-3 text-white">
                    <option value="LIVE">LIVE</option>
                    <option value="DEV">DEV</option>
                </select>
                <input type="text" name="tech" required placeholder="React, Node.js" class="w-full glass-panel bg-white/5 border-white/10 rounded-xl px-4 py-3 text-white neon-border-focus" />
            </div>
            <button type="submit" class="w-full bg-primary text-black py-3 rounded-xl font-mono font-bold uppercase hover:bg-primary/90">Create</button>
        </form>
    </div>
</div>

<script>
document.getElementById('newProjectBtn').onclick = () => document.getElementById('projectModal').classList.remove('hidden');
document.getElementById('closeModal').onclick = () => document.getElementById('projectModal').classList.add('hidden');
document.getElementById('projectForm').onsubmit = (e) => {
    e.preventDefault();
    const form = e.target;
    const data = {name: form.name.value, description: form.description.value, status: form.status.value, tech: form.tech.value.split(',')};
    const card = `<div class="glass-panel rounded-2xl p-6 border-white/5 hover:border-primary/20 transition-all">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-white">${data.name}</h3>
            <span class="px-3 py-1 ${data.status === 'LIVE' ? 'bg-primary/20 text-primary' : 'bg-white/10 text-white'} text-xs font-mono rounded-full">${data.status}</span>
        </div>
        <p class="text-slate-400 text-sm mb-4">${data.description}</p>
        <div class="flex gap-2">${data.tech.map(t => `<span class="text-xs glass-panel px-3 py-1 rounded">${t.trim()}</span>`).join('')}</div>
    </div>`;
    document.getElementById('projectsList').insertAdjacentHTML('beforeend', card);
    document.getElementById('projectModal').classList.add('hidden');
    form.reset();
};
</script>
